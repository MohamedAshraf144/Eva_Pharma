@{
    ViewData["Title"] = "Home";
}

<div class="text-center fade-in">
    <h1 class="display-4 mb-4">Welcome to BookShop</h1>
    <p class="lead mb-5">Your comprehensive book management system</p>

    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="card h-100 hover-card">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-4x text-primary mb-3"></i>
                    <h5 class="card-title">Manage Categories</h5>
                    <p class="card-text">Organize your books by creating and managing categories with advanced features.</p>
                    <div class="mt-auto">
                        <a asp-controller="Category" asp-action="GetAllCategories" class="btn btn-primary">
                            <i class="fas fa-arrow-right"></i> View Categories
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100 hover-card">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-4x text-success mb-3"></i>
                    <h5 class="card-title">Manage Products</h5>
                    <p class="card-text">Add, edit, and manage your entire book collection with powerful search and filtering.</p>
                    <div class="mt-auto">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-success">
                            <i class="fas fa-arrow-right"></i> View Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-star"></i> Features</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Category Management</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Product CRUD Operations</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Real-time Search</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Advanced Filtering</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Dark/Light Theme</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Responsive Design</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Interactive Tooltips</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Pagination System</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Repository Pattern</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Entity Framework Core</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Clean Architecture</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Modern UI/UX</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-bolt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2 justify-content-center">
                        <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-primary">
                            <i class="fas fa-plus"></i> Add Category
                        </a>
                        <a asp-controller="Product" asp-action="Create" class="btn btn-outline-success">
                            <i class="fas fa-plus"></i> Add Product
                        </a>
                        <a asp-controller="Category" asp-action="GetAllCategories" class="btn btn-outline-info">
                            <i class="fas fa-search"></i> Browse Categories
                        </a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-warning">
                            <i class="fas fa-search"></i> Browse Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px var(--shadow);
        }

    .fade-in {
        animation: fadeIn 0.8s ease-in;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>